import speech_recognition as sr  # Importamos la librer√≠a SpeechRecognition y le ponemos el alias "sr"
def speech():
    
    r = sr.Recognizer()
    with sr.Microphone() as source:
    
        r.adjust_for_ambient_noise(source)
        print("üé§ ¬°Habla ahora!")  
        audio = r.listen(source)
    try:
        texto = r.recognize_google(audio, language="es-ES")
        return texto
    except sr.UnknownValueError:
        return "‚ùå Google no pudo entender lo que dijiste. Intenta hablar m√°s claro."
    except sr.RequestError as e:
        return "‚ö†Ô∏è No se pudo conectar con el servicio de Google; error: {0}".format(e)
print(speech())
